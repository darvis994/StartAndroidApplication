<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="darvis.startandroidapplication.MainActivity"
    android:contextClickable="false"
    android:focusable="true"
    android:focusableInTouchMode="false">

    <TextView
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:id="@+id/helloTextView"
        android:layout_marginTop="40dp"
        android:contextClickable="false"
        android:textSize="50px"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plus"
        android:id="@+id/helloButton"
        android:layout_marginBottom="84dp"
        android:alpha="0.9"
        android:enabled="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputTextField"
        android:layout_above="@+id/helloButton"
        android:layout_alignStart="@+id/helloTextView"
        android:layout_marginBottom="116dp"
        android:layout_alignEnd="@+id/helloTextView"
        android:layout_alignParentEnd="false"
        android:textIsSelectable="false"
        android:editable="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="Sum:"
        android:layout_alignBottom="@+id/helloTextView"
        android:layout_toStartOf="@+id/helloTextView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number:"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/inputTextField"
        android:layout_toStartOf="@+id/inputTextField" />

</RelativeLayout>
